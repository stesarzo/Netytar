                <Line
                    Grid.Row="0"
                    Width="auto"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Stretch="UniformToFill"
                    Stroke="SandyBrown"
                    StrokeThickness="5"
                    X1="1" />
                <Button
                    x:Name="btnExit"
                    Grid.Row="1"
                    Width="250"
                    Height="60"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Click="Button_Click"
                    Content="Salva e suona"
                    Foreground="White"
                    Style="{DynamicResource MyButtonStyle}" />
            </Grid>
        </TabItem>

        <!--  ALTRA CASELLA  -->
    </TabControl>






                            Stroke="SandyBrown"
                            StrokeThickness="5"
                            X1="1" />
                    </Grid>
                </Grid>
                <Line
                    Grid.Row="1"
                    Width="auto"
                    Height="auto"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Stretch="UniformToFill"
                    Stroke="SandyBrown"
                    StrokeThickness="5"
                    Y1="1" />
